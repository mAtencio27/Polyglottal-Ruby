<% content_for :title do%>
  <%= @entry.title %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-primary">
      <p class="panel-heading">
        <strong>Title:</strong>
        <%= @entry.title %>
      </p>
      <div class="panel-block">
        <%= @entry.post %>
      </div>
    </nav>


    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-gray" %> 
        <%= link_to 'Delete', entries_path(@entry), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
      </div>
    </div>
  <div>
</div>